<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tangerinespecter.oms.system.dao.SystemUserMapper">
    <sql id="Base_Column_List">
		username, nick_name, password, phone_number, create_time,
		update_time, admin
	</sql>
    <select id="getUserByLogin" resultType="com.tangerinespecter.oms.system.domain.entity.SystemUser">
		select *
		from system_user
		where username = #{userName}
		and password = #{password}
	</select>
    <insert id="createUserByRegister"
            parameterType="com.tangerinespecter.oms.system.domain.entity.SystemUser"
            useGeneratedKeys="true" keyProperty="id">
		insert into system_user (username,
		password,create_time)
		values (#{userName}, #{password}, #{createTime})
	</insert>
    <select id="getUserByUserName" resultType="com.tangerinespecter.oms.system.domain.entity.SystemUser">
		select *
		from
		system_user
		where username = #{userName}
	</select>
    <select id="queryForPage" resultType="com.tangerinespecter.oms.system.domain.entity.SystemUser">
		select *
		from system_user
	</select>
    <select id="selectOneByUserName" resultType="com.tangerinespecter.oms.system.domain.entity.SystemUser">
		select *
		from system_user
		where username = #{userName}
		and is_del = 0
	</select>
</mapper>