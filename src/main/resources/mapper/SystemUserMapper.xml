<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tangerinespecter.oms.system.mapper.SystemUserMapper">
    <resultMap id="systemUserMap" type="com.tangerinespecter.oms.system.domain.entity.SystemUser">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="nick_name" property="nickName"/>
        <result column="avatar" property="avatar"/>
        <result column="sex" property="sex"/>
        <result column="phone_number" property="phoneNumber"/>
        <result column="email" property="email"/>
        <result column="city" property="city"/>
        <result column="birthday" property="birthday"/>
        <result column="brief" property="brief"/>
        <result column="dept_id" property="deptId"/>
        <result column="login_count" property="loginCount"/>
        <result column="last_login_date" property="lastLoginDate"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="salt" property="salt"/>
        <result column="admin" property="admin"/>
        <result column="is_del" property="isDel"/>
        <collection property="roles" ofType="com.tangerinespecter.oms.system.domain.entity.SystemRole">
            <id column="id" property="id"/>
            <result column="name" property="name"/>
            <collection property="permissions" ofType="com.tangerinespecter.oms.system.domain.entity.SystemPermission">
                <id column="id" property="id"/>
                <result column="name" property="name"/>
                <result column="url" property="url"/>
            </collection>
        </collection>
    </resultMap>
    <sql id="Base_Column_List">
        username, nick_name, password, phone_number, create_time,
        update_time, admin
    </sql>
    <update id="updateLoginCountById">
        update system_user
        set last_login_date = #{lastLoginDate},
            update_time     = #{updateTime},
            login_count     = login_count + 1
        where id = #{id}
    </update>
    <update id="updateUserInfo">
        update system_user
        set nick_name    = #{nickName},
            city         = #{city},
            email        = #{email},
            sex          = #{sex},
            brief        = #{brief},
            phone_number = #{phoneNumber}
        where id = #{id}
    </update>
    <update id="updatePassword">
        update system_user
        set password = #{password}
        where id = #{id}
    </update>
    <select id="getUserByLogin" resultType="com.tangerinespecter.oms.system.domain.entity.SystemUser">
        select *
        from system_user
        where username = #{userName}
          and password = #{password}
    </select>
    <insert id="createUserByRegister"
            parameterType="com.tangerinespecter.oms.system.domain.entity.SystemUser"
            useGeneratedKeys="true" keyProperty="id">
        insert into system_user (username, password, create_time)
        values (#{userName}, #{password}, #{createTime})
    </insert>
    <select id="getUserByUserName" resultType="com.tangerinespecter.oms.system.domain.entity.SystemUser">
        select *
        from system_user
        where username = #{userName}
    </select>
    <select id="queryForPage" resultType="com.tangerinespecter.oms.system.domain.entity.SystemUser">
        select *
        from system_user
    </select>
    <select id="selectOneByUserName" resultMap="systemUserMap">
        select u.*
        from system_user u
        <!--INNER JOIN system_user_role ur
        ON ur.uid = u.id
        INNER JOIN system_role r
        ON r.id = ur.rid
        INNER JOIN system_permission_role pr
        ON pr.rid = r.id
        INNER JOIN system_permission_module pm
        ON pr.module_id = pm.id-->
        where u.username = #{userName}
        and u.is_del = 0
    </select>
</mapper>